---
import { ANCHORTAGS } from "../config";

const isHome = Astro.url.pathname === "/";
---

<nav>
  <div>
    <a href=`/${isHome ? '#' + ANCHORTAGS.work : ''}`>work</a>
    <a href='/play'>play</a>
  </div>
  <div>
    <a href='#'>contact</a>
    <a href='/#about'>about</a>
  </div>
</nav>

<style lang="postcss">
    nav {
        @apply sticky px-3 py-3 top-0 flex justify-between;
        @apply z-50;
    }
    nav>div {
      @apply flex gap-6;
    }
    nav a {
      @apply inline px-2 py-1 -mx-2 -my-1;
      
    }
</style>
